<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('./partials/head') %>
        <style>
            body {
                font-family: Arial, sans-serif;
            }

            .star-rating {
                direction: rtl;
                display: inline-flex;
            }

            .star {
                font-size: 2em;
                color: lightgray;
                cursor: pointer;
                transition: color 0.3s;
            }

            .star:hover,
            .star:hover~.star,
            .star-rating input:checked~.star {
                color: gold;
            }

            .star-rating input {
                display: none;
            }
        </style>
</head>

<body>
    <%- include('./partials/navbar') %>

        <div style="display: flex;">
            <div style="display: flex;">
                <div style="width: 50%;">
                    <% allProducts.forEach((key)=>{ %>
                        <div>
                            <div class="product">
                                <div class="product-images">
                                    <img src="<%= key.imgBuffer %>" alt="Motorola G34" class="main-image">
                                </div>
                                <div class="product-details">
                                    <h1>
                                        <%= key.title %>
                                    </h1>
                                    <div class="ratings">
                                        <span>4.2 ★</span>
                                        <span>1,00,698 Ratings & 7,042 Reviews</span>
                                        <span class="assured">Assured</span>
                                    </div>
                                    <div class="price">
                                        <span class="current-price">₹<%= key.discountPrice %></span>
                                        <span class="original-price">₹<%= key.markedPrice %></span>
                                        <span class="discount">20% off</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%}); %>
                </div>
                <div class="shadow p-3 mb-5 bg-white rounded" style="width: 60%;">
                    <form action="/feedback/submit" method="post">
                        <input type="text" name="productId" id="" hidden="true" value="<%= allProducts[0].productId %>">
                        <div class="star-rating">
                            <input type="radio" name="rating" value="5" id="rating-5">
                            <label for="rating-5" class="star">&#9733;</label>
                            <input type="radio" name="rating" value="4" id="rating-4">
                            <label for="rating-4" class="star">&#9733;</label>
                            <input type="radio" name="rating" value="3" id="rating-3">
                            <label for="rating-3" class="star">&#9733;</label>
                            <input type="radio" name="rating" value="2" id="rating-2">
                            <label for="rating-2" class="star">&#9733;</label>
                            <input type="radio" name="rating" value="1" id="rating-1">
                            <label for="rating-1" class="star">&#9733;</label>
                        </div>
                        <div class="form-group" style="margin-top: 10px;">
                            <label for="exampleInputPassword1">Message</label>
                            <input type="text" class="form-control" id="exampleInputPassword1"
                                placeholder="Enter Messge" name="message">
                        </div>
                        <button type="submit" style="margin-top: 10px;" class="btn btn-success">Submit</button>
                    </form>
                </div>
            </div>
        </div>
        </div>

</body>

</html>